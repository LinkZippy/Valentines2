<body>
    <h1>Will You Be My Valentine? ‚ù§Ô∏è</h1>
    <div class="valentine-box">
        <button id="yes" class="btn">Yes</button>
        <button id="no" class="btn">No</button>
    </div>

    <script>
        const noButton = document.getElementById("no");

        noButton.addEventListener("mouseover", function () {
            noButton.classList.add("runaway");
            setTimeout(() => {
                noButton.style.top = Math.random() * window.innerHeight + "px";
                noButton.style.left = Math.random() * window.innerWidth + "px";
                noButton.classList.remove("runaway");
            }, 300);
        });

        document.getElementById("yes").addEventListener("click", function() {
            alert("Yay! Now you owe me chocolates üç´‚ù§Ô∏è");
            document.body.innerHTML += `<div class="hearts">‚ù§Ô∏è</div>`;
        });

        setInterval(() => {
            const heart = document.createElement("div");
            heart.classList.add("hearts");
            heart.style.left = Math.random() * window.innerWidth + "px";
            document.body.appendChild(heart);
            setTimeout(() => heart.remove(), 3000);
        }, 500);
    </script>
</body>
