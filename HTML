    <style>
        body {
            font-family: "Comic Sans MS", cursive, sans-serif;
            background-color: pink;
            text-align: center;
            margin: 0;
            padding: 0;
        }
        h1 {
            font-size: 3em;
            color: red;
            margin-top: 50px;
            text-shadow: 3px 3px white;
        }
        .valentine-box {
            background: white;
            padding: 30px;
            margin: 20px auto;
            width: 50%;
            border-radius: 20px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);
        }
        .btn {
            padding: 15px 30px;
            font-size: 1.5em;
            border: none;
            cursor: pointer;
            border-radius: 10px;
            transition: all 0.3s ease-in-out;
        }
        #yes {
            background: red;
            color: white;
        }
        #yes:hover {
            background: darkred;
        }
        #no {
            background: gray;
            color: white;
            position: absolute;
        }
        @keyframes moveAway {
            0% { left: 0; top: 0; }
            25% { left: 200px; top: 50px; }
            50% { left: -200px; top: -50px; }
            75% { left: 100px; top: -100px; }
            100% { left: -100px; top: 100px; }
        }
        .runaway {
            animation: moveAway 0.3s linear forwards;
        }
        .hearts {
            font-size: 50px;
            color: red;
            position: absolute;
            animation: floatUp 3s infinite;
        }
        @keyframes floatUp {
            from { transform: translateY(0); opacity: 1; }
            to { transform: translateY(-200px); opacity: 0; }
        }
